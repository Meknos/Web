{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
        <style>
        table, th, td {border: 3px solid;  text-align: center;}
        </style>
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for s in staff %}
                <tr>
                    <th scope="row">{{ s.id }}</th>
                    <td>{{ s.name }}</td>
                    <td>
                        <a href="{{ path('view each staff', {'id': b.id}) }} " class='btn btn-success'>View</a>  
                        <a href="{{ path('staff_edit', {'id': b.id}) }} " class='btn btn-default' >Edit</a> 
                        <a href="{{ path('staff_delete', {'id': b.id}) }}  " class='btn btn-danger'>Delete</a> 
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('book_list') }}" class="btn btn-default1">Back to Book List</a>
{% endblock %}
